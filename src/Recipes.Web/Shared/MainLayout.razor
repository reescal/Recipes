@inherits LayoutComponentBase

<Layout Class="layout">
    <Header Class="custom-header">
        <GridRow Justify="space-between">
            <GridCol>
                <Title Level="3" Style="line-height: inherit">RESEater.io</Title>
            </GridCol>
            <GridCol>
                <Menu Theme="MenuTheme.Light" Mode="MenuMode.Horizontal" DefaultSelectedKeys=@(new[]{nameof(Recipes)}) Selectable=false>
                    <MenuItem Key=@nameof(Recipes) RouterLink="/Recipes" RouterMatch="NavLinkMatch.All">Recipes</MenuItem>
                    <MenuItem Key="Ingredients" RouterLink="/Ingredients" RouterMatch="NavLinkMatch.All">Ingredients</MenuItem>
                    <MenuItem Key="Materials" RouterLink="/Materials" RouterMatch="NavLinkMatch.All">Materials</MenuItem>
                    <MenuItem Key="Grocery List" RouterLink="/GroceryList" RouterMatch="NavLinkMatch.All">Grocery List</MenuItem>
                </Menu>
            </GridCol>
        </GridRow>
    </Header>
    <Content Style="padding: 0 10px; background-color: white">
        <div class="page">
            <main>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </Content>
</Layout>

<style>
    .custom-header {
        height: 44px;
        padding: 0 10px;
        line-height: 44px;
        background: #ffffff;
    }
</style>

